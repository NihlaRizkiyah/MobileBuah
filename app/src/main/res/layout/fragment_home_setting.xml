<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_large"
    tools:context=".fragment.HomeSettingFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:text="Profil"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/btn_edit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_edit"
                    app:tint="@color/black" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_xlarge"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/overlay_dark_90"
                    android:layout_weight="1"/>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@color/black"
                    android:text="Username Admin"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/overlay_dark_90"
                    android:layout_weight="1"/>

            </LinearLayout>

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_large"
                android:background="@drawable/bg_edit_text"
                android:textColorHint="@color/grey_300"
                android:textColor="@color/grey_100"
                android:drawableStart="@drawable/ic_person_outline"
                android:drawablePadding="@dimen/spacing_large"
                android:textSize="17sp"
                android:inputType="text"
                android:enabled="false"
                android:hint="Nama"/>

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_large"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/overlay_dark_90"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@color/black"
                    android:text="Password Admin"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/overlay_dark_90"
                    android:layout_weight="1"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_large"
                    android:background="@drawable/bg_edit_text"
                    android:textColorHint="@color/grey_300"
                    android:textColor="@color/grey_100"
                    android:drawableStart="@drawable/ic_lock_outline"
                    android:drawablePadding="@dimen/spacing_large"
                    android:textSize="17sp"
                    android:enabled="false"
                    android:inputType="textPassword"
                    android:hint="Password"/>

                <ImageView
                    android:id="@+id/btn_visibility"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/ic_visibility_off"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red_700"
                android:text="isi password jika ingin diubah"/>


            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_large"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/overlay_dark_90"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@color/black"
                    android:text="Nomor HP Admin"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/overlay_dark_90"
                    android:layout_weight="1"/>

            </LinearLayout>

            <EditText
                android:id="@+id/et_nomor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_large"
                android:background="@drawable/bg_edit_text"
                android:textColorHint="@color/grey_300"
                android:textColor="@color/grey_100"
                android:drawableStart="@drawable/ic_phone_android"
                android:drawablePadding="@dimen/spacing_large"
                android:textSize="17sp"
                android:inputType="number"
                android:enabled="false"
                android:hint="Nomor HP"/>

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_xlarge"/>

            <Button
                android:id="@+id/btn_update"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button_primary"
                android:text="Update Profil"
                android:textColor="@color/white" />


        </LinearLayout>
    </ScrollView>

</FrameLayout>